@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Univer)
            </th>
            <th>
                @Html.DisplayName("Persona")
            </th>
            <th>
                @Html.DisplayName("Profesión")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Univer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CcPerNavigation.Nombre) @Html.DisplayFor(modelItem => item.CcPerNavigation.Apellido)
                 (@Html.DisplayFor(modelItem => item.CcPerNavigation.Cc))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfNavigation.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer">Edit</a> |
                <a asp-action="Details" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer">Details</a> |
                <a asp-action="Delete" asp-route-idProf="@item.IdProf" asp-route-ccPer="@item.CcPer">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
